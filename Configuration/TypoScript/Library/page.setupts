page {
	# Overwrite themes_gridelements body-tag
	# in order to add bootstraps scroll spy
	bodyTagCObject {
		20 >
		20 = TEXT
		20 {
			value = class="colorset-{$skinStylesheet} language-{$themes.languages.current.isoCodeShort}" data-spy="scroll" data-target="{$themes.configuration.bootstrap.javascript.scrollspy.target}" data-offset="{$themes.configuration.bootstrap.javascript.scrollspy.offset}"
			insertData = 1
		}
	}
}
